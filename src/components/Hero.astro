---
const { src = '/hero_img.svg' } = Astro.props
---

<section class="hero relative my-24">
  <img class="absolute right-0 top-0 hidden w-2/5 lg:block" src={src} alt="" decoding="async" />
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-4xl md:text-left lg:text-6xl">
          <slot>Laadukasta <span class="text-gradient">sisällöntuotantoa</span><br /> erilaisiin tarpeisiin</slot>
        </h1>
      </div>
    </div>
    <div class="hero_desciption mt-10">
      <div class="flex flex-col gap-3 min-[500px]:flex-row">
        <a class="button color-secondary min-w-[8rem]" href="/services"> Palvelut</a>
        <a class="button min-w-[8rem]" href="/contact"> Ota yhteyttä</a>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .text-gradient {
    background: linear-gradient(315deg, var(--pinkki-200) 10%, var(--primary-100));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.darkmode .text-gradient) {
    background: linear-gradient(315deg, var(--primary-100) 25%, var(--secondary-100));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero_desciption {
    max-width: 65ch;
  }
</style>
